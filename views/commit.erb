<h1>
<%=h commit.message.split("\n").first %>
</h1>
Browse the <a href="/tree/<%= commit.tree.id %>">Tree</a>
<div id="author">
  Author: <%= commit.author %>
</div>
<div id="committer">
  Committer: <%= commit.committer %>
</div>
<div id="commit-id">
  SHA: <%= commit.id %>
</div>
<div id="message">
  <pre><code>
<%=h commit.message %>
</pre></code>
</div>
<% commit.diffs.each do |diff| %>
<div class="diff">
  <div class="header">
    <% if diff.a_path == diff.b_path %>
      <a href="/blob/<%=commit.id %>/<%= diff.a_path %>"><%= diff.a_path %></a> - 
    <% else %>
      Path changed!!!
    <% end %>
    <a href="/commits/<%= commit.id %>/">History</a> - <br>
  </div>
  <% if diff.deleted_file %>
    DELETED
  <% else %>
    <% if image?(diff.b_path) %>
      <div class="image">
        <%= blob_img_tag(commit.id, diff.b_path) %>
      </div>
    <% else %>
      <div class="highlight">
        <%= colorize_diff(diff.diff) %>
      </div>
    <% end %>
  <% end %>
</div>
<% end %>
